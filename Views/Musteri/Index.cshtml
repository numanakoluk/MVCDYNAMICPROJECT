@using MVCDYNAMICPROJECT.Models.Entity
@model List<TBLMUSTERILER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
            {
                <p>
                    <b>Aranacak Müşteri Adı :</b> @Html.TextBox("p")
                    <input type="submit" value="Ara"/>
                </p>
            }
<table class="table table-bordered">
    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>MÜŞTERİ SOYADI</th>
        <th>SİL</th>
        <th>GÜNELLE</th>
        <th>ALERT KULLAN</th>


    </tr>
    <tbody>
        @foreach (var musteri in Model)
        {

            <tr>
                <th>@musteri.MUSTERIID</th>
                <td>@musteri.MUSTERIAD</td>
                <td>@musteri.MUSTERISOYAD</td>
                <td><a href="/MUSTERI/SIL/@musteri.MUSTERIID" class=" btn btn-danger">SİL</a></td>
                <td><a href="/MUSTERI/MusteriGetir/@musteri.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>
                <td>@Html.ActionLink("SİL BUTONU", "SIL", new { id=musteri.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Silmek İstediğnize Emin misiniz?')" })</td>

            </tr>
        }
    </tbody>

</table>
<a href="/Musteri/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>




